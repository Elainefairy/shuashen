page {
  background: #10d2af;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
/*===============================================
  
  初始显示页面

 ===============================================*/
.splash-view{
  padding-top: 200rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.desc_item{
  margin-bottom: 25rpx;
  height: 50rpx;
  width: 500rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.desc_item_icon{
  border: 1px solid #fff;
  border-radius: 50%;
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: white;
  
}
.desc_item_desc{
  display: inline-block;
  font-size: 35rpx;
  color: white;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
/*===============================================
  
  初次选择图片显示按钮

 ===============================================*/

.obtain-img-start {
  margin-top: 80rpx;
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  border: 1px solid #fff ;
  box-shadow: 0rpx 0rpx 20rpx #333;
}
/*===============================================
  
  选择银行卡区块

 ===============================================*/

.obtain-img-container {
  border-radius: 20rpx;
  width: 620rpx;
  margin-top: 40rpx;
  margin-left: 65rpx;
  height: 100%;
   /*width: 100%;*/ 
    border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
   background: #ffffff80;

  transition: all 800ms ease;
  box-sizing: border-box;
}

.obtain-img-button {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.obtain-img-button-text {
  width: auto;
  line-height: 34px;
  font-size: 34rpx;
  /* color: #007aff; */
  color: #0060ff;
}

.obtain-img-txt {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.obtain-img-txt-title {
  width: auto;
  line-height: 34px;
  font-size: 34rpx;
  /* color: #007aff; */
  color: #fff;
}

/*===============================================
  
  银行卡照片

 ===============================================*/

.img-container {
  width: 600rpx;
  height: 950rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.image {
  width: 100%;
  height: auto;
}

